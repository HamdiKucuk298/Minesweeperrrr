        <AnchorPane prefHeight="400.0" prefWidth="443.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="113.0" fitWidth="171.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
